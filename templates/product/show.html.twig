{% extends 'base.html.twig' %} 

{% block title %}{{ product.name }} | DoDo Le Guide{% endblock %} 

{% block body %}

<div class="example-wrapper" id="haut">
    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <small>{{ product.subtitle }}</small>
            <br/>
            <section>
                <p class="espace"></p>
            </section>
            <hr>
            <p>
                {{ product.description }}
            </p>
            <hr>
            <span class="product-page-price">{{ (product.price / 100 )|number_format(2, ',', '.') }} â‚¬</span><br/>
            
            <a href="{{ path('add_to_cart', { id : product.id } ) }}" class="btn btn-outline-success mt-4">Ajouter au panier</a>
        </div>
    </div>
</div>
<style>
    #haut {
        margin-top: 300px;
    }

    .btn-primary {
        background-color: #569A24;
        border-color: #569A24;
    }

    .product-page-price {
        font-size: 19px;
    }
</style>
{% endblock %}