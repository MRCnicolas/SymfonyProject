{% extends 'base.html.twig' %} 

{% block title 'Nos produits | ' ~ parent() %} 

{% block body %}

<div class="row">

    <div class="col-md-2">
        <h4>Filtrer</h4>
        <section>
            <p class="espace"></p>
        </section>
        {{ form(form) }}
    </div>

    <div class="col-md-9">

        <h1 class="text-center">{{ title }}</h1>
        <section>
            <p class="espace1 mt-5"></p>
        </section>
        <div class="row">

            {% for product in products %}

            <div class="col-md-4">
                <div class="product-item text-center">
                    <a href="{{ path('product', { 'slug' : product.slug }) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                    <section>
                        <p class="espace2"></p>
                    </section>
                    <h5>{{ product.name }}</h5>
                    <span class="product-subtitle">{{ product.subtitle }}</span>
                    <span class="product-price">{{ (product.price / 100 )|number_format(2, ',', '.') }} â‚¬</span>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

</div>


