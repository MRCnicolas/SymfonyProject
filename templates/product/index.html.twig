{% extends 'base.html.twig' %} {% block title 'Nos produits | ' ~ parent() %} {% block body %}

<div class="row">
    <div class="col-md-3">
        <h1>Filtrer</h1>
        {{ form(form) }}
    </div>

    <div class="col-md-9">

        <h1>{{ title }}</h1>

        <div class="row">

            {% for product in products %}

            <div class="col-md-4">
                <div class="product-item text-center">
                    <a href="{{ path('product', { 'slug' : product.slug }) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                    <h5>{{ product.name }}</h5>
                    <span class="product-subtitle">{{ product.subtitle }}</span>
                    <span class="product-price">{{ (product.price / 100 )|number_format(2, ',', '.') }} â‚¬</span>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

</div>



<style>
    h1 {
        margin-top: 250px;
    }
    
    .product-item h5 {
        text-transform: uppercase;
        font-size: 15px;
        margin-bottom: -7px;
    }
    
    .product-item {
        margin-top: 50px;
    }
    
    .product-item .product-subtitle {
        font-size: 14px;
        display: block;
        margin-bottom: 1Opx;
    }
    
    .product-item .product-price {
        font-size: 15px;
        font-weight: bold;
    }
</style>
{% endblock %}