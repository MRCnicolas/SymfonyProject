{% extends 'base.html.twig' %}

{% block title 'Valider ma commande | ' ~ parent() %}

{% block body %}

<h1>{{ title }}</h1>
<section>
    <p class="espace"></p>
</section>
<a href="{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
<hr>

<div class="row">
    <div class="col-md-6">
        {% set formHtml %}
        {{ form_start(form, {action:path('order_recapitulatif')}) }}
        {{ form_end(form) }}
        {% endset %}
        {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
    </div>
    
    <div class="col-md-6">
        <div class="text-center">
            <b>RÃ©capitulatif de ma commande</b>
        </div>
        <section>
            <p class="espace1"></p>
        </section>

        <div class="order-summary">
            {% for key,product in cart %}

            <div class="row {% if key > 0 %}mt-2{% endif %}">

                <div class="col-2 mr-5">
                    <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}"
                        height="90px">
                </div>

                <div class="col-4 my-auto ml-5">
                    {{ product.product.name}}</br>
                    <small>{{ product.product.subtitle }}</small>
                </div>

                <div class="col-2 my-auto ml-5">
                    x {{ product.quantity }}

                </div>
            </div>
            {% endfor %}

        </div>

    </div>
</div>
<style>
    h1 {
        margin-top: 300px;
    }

    .espace {
        height: 30px;
    }

    .text-center {
        margin-top: 6px;
    }

    a:hover {
        color: #569A24;
    }

    .form-check {
        background-color: rgba(207, 247, 207, 0.377);
        padding: 20px 65px;
        margin-top: 6px;
    }

    .col-form-label {
        font-weight: bold;
    }

    .order-summary {
        background-color: rgba(207, 247, 207, 0.377);
        padding: 25px;
    }
</style>
{% endblock %}