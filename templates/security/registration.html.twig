{% extends 'base.html.twig' %} 

{% block title 'Inscription | ' ~ parent() %} 

{% block body %}

<div class="example-wrapper">
    <h1>{{title}}</h1>

    {{ form_start (form) }}
    {{ form_row (form.lastname, {'label':'Nom', 'attr': {'class': 'input-group', 'placeholder': 'Nom'}}) }}
    {{ form_row (form.firstname, {'label':'Prénom', 'attr': {'class': 'input-group', 'placeholder': 'Prénom'}}) }} {{ form_row
    (form.email, {'label':'Adresse email', 'attr': {'class': 'input-group', 'placeholder': 'Adresse email'}}) }}
    {{ form_row (form.password, {'label':'Mot de passe', 'attr': {'class': 'input-group', 'placeholder': 'Mot de passe...'}}) }}
    {{ form_row (form.confirm_password, {'label':'Confirmation du mot de passe', 'attr': {'class': 'input-group','placeholder': 'Confirmation du mot de passe...'}}) }}

    <button type="submit" class="btn btn-success">Inscription !</button> {{ form_end(form) }}
</div>
<style>
    .example-wrapper h1 {
        margin-top: 260px;
    }
</style>
{% endblock %}