{% extends 'base.html.twig' %}

{% block title 'Inscription | ' ~ parent() %}

{% block carousel %}<header></header>{% endblock %}

{% block body %}

<h1 class="text-left mb-5">{{title}}</h1>

<div class="text-left">
    {{ form_start (form) }}
    {{ form_row (form.lastname, {'label':'Nom', 'attr': {'class': 'input-group', 'placeholder': 'Nom'}}) }}
    {{ form_row (form.firstname, {'label':'Prénom', 'attr': {'class': 'input-group', 'placeholder': 'Prénom'}}) }}
    {{ form_row (form.email, {'label':'Adresse email', 'attr': {'class': 'input-group', 'placeholder': 'Adresse email'}}) }}
    {{ form_row (form.password, {'label':'Mot de passe', 'attr': {'class': 'input-group', 'placeholder': 'Mot de passe...'}}) }}
    {{ form_row (form.confirm_password, {'label':'Confirmation du mot de passe', 'attr': {'class': 'input-group','placeholder': 'Confirmation du mot de passe...'}}) }}
</div>
<div class="text-center">
<button type="submit" class="btn btn-outline-success mt-4">Inscription !</button>
</div>
{{ form_end(form) }}

<style>
    h1 {
        margin-top: 450px;
        font-size: 45px;
    }

    .btn-outline-success {
        width: 150px;
    }
</style>
{% endblock %}