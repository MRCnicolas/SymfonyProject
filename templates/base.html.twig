<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{% block title %}DoDo Le Guide{% endblock %}</title>

    {# Run `composer require symfony/webpack-encore-bundle` and uncomment the following Encore helpers to start using Symfony UX #} {% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.6.0/sketchy/bootstrap.min.css" integrity="sha512-AF3OQszBqW7CeiKglwNTnTwPCbJvAo6DVXLbU37Qcw7nPxVPywkPbDCZyGpLu0xqzPeQL2GKAQ5k69hMBTI7LA==" crossorigin="anonymous" /> {#{{ encore_entry_link_tags('app') }}#} {% endblock %} {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>{#{{ encore_entry_script_tags('app') }}#} {% endblock %}
</head>
<header>
    <div class="header">
        <img src="/images/DODO.png" id="logo">


        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil
                <span class="sr-only">(current)</span>
              </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_randonnée') }}">Randonnée</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_activitésportive') }}">Activité Sportive</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Menu</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('app_about') }}">A Propos</a>
                        </div>
                    </li>
                </ul>
                <a class="navbar-brand" href="#"><img src="/images/gouillat1.png" id="logonav"></a>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="rechercher">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Recherche</button>
                </form>
            </div>
        </nav>
    </div>
</header>

<main role="main">
    {% block body %} {% endblock %}
</main>

<footer>
    <p>
        &copy; Copyright {{ 'now'|date("Y", "Europe/Paris") }} &middot; <a href="{{ path('app_about') }}">A Propos</a> <a href="{{ path('app_home') }}">Retour à la page d'accueil</a> {{ 'now'|date("d/m/Y H:i A", "Europe/Paris") }}.
    </p>
</footer>

<style>
    body {
        margin-top: 0;
        margin-bottom: 0;
    }
    
    #logo {
        top: 50%;
        left: 20%;
        width: 120px;
        height: 200px;
        padding-left: 1%;
        padding-top: 1%;
    }
    
    header {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        width: 100%;
        height: 262px;
        background: url("/images/vue-du-ciel1.png");
        background-position: center;
        background-size: cover;
        position: relative;
        left: 0;
        right: 0;
        z-index: 1;
    }
    
    #logonav {
        width: 100px;
        height: 32px;
    }
    
    .example-wrapper {
        text-align: center;
        margin: 160px auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

</html>