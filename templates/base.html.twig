<!doctype html>

<html lang="{{ app.request.locale }}">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>{% block title %}DoDo Le Guide{% endblock %}</title>


    {% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.6.0/sketchy/bootstrap.min.css"
        integrity="sha512-AF3OQszBqW7CeiKglwNTnTwPCbJvAo6DVXLbU37Qcw7nPxVPywkPbDCZyGpLu0xqzPeQL2GKAQ5k69hMBTI7LA=="
        crossorigin="anonymous" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css"
        integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous" />
    <link rel="stylesheets" href="carousel.css">
    {% endblock %}
    {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
        integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous">
    </script>
    {% endblock %}

</head>

<body>
    <header>

        {% if block('carousel') is defined %}
        <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
            <!-- <ol class="carousel-indicators">
                {% for key,header in headers %}
                <li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %}class="active" {% endif %}></li>
                {% endfor %}
            </ol>-->
            <div class="carousel-inner">
                {% for key,header in headers %}
                <div class="carousel-item {% if key == 0 %}active{% endif %}"
                    style="background: url('/uploads/{{ header.illustration }}');background-size:cover;background-position:center;">
                    <div class="container1">
                        <div class="carousel-caption">
                            <h2 id="titreheader">{{ header.title }}</h2>
                            <p>{{ header.content }}</p>
                            <p>
                                <a class="btn btn-outline-success" href="{{ header.btnUrl }}" role="button"
                                    id="btnheader"><small>{{ header.btnTitle }}</small></a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <img src="/images/pagebase/header/DODO.png" id="logo" />

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03"
                aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <div class="svg-wrapper">
                            <svg height="30" width="100">
                                <rect id="shape" height="30" width="100" />
                                <div id="text">
                                    <a href="{{ path('app_home') }}">Accueil</a>
                                </div>
                            </svg>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <div class="svg-wrapper">
                            <svg height="30" width="100">
                                <rect id="shape" height="30" width="100" class="sh1" />
                                <div id="textmenu">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                                        aria-haspopup="true" aria-expanded="false">Activités</a>
                                    <div class="dropdown-menu" style="left: -60px">
                                        <a class="dropdown-item" href="{{ path('app_randonnée') }}">Randonnée</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_activitésportive') }}">Activité Sportive</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_plage') }}">Plage</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_visite') }}">Visite</a>
                                    </div>
                                </div>
                            </svg>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <div class="svg-wrapper">
                            <svg height="30" width="100">
                                <rect id="shape" height="30" width="100" class="sh2" />
                                <div id="textmenu">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                                        aria-haspopup="true" aria-expanded="false">Culture</a>
                                    <div class="dropdown-menu" style="left: -60px">
                                        <a class="dropdown-item" href="{{ path('app_plats') }}">Plats</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_biodiversité') }}">Biodiversité</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_histoire') }}">Histoire</a>
                                    </div>
                                </div>
                            </svg>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="svg-wrapper">
                            <svg height="30" width="100">
                                <rect id="shape" height="30" width="100" class="sh3" />
                                <div id="text">
                                    <a href="{{ path('products') }}">Boutique</a>
                                </div>
                            </svg>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="svg-wrapper">
                            <svg height="30" width="100">
                                <rect id="shape" height="30" width="100" class="sh4" />
                                <div id="text">
                                    <a href="{{ path('contact') }}">Contact</a>
                                </div>
                            </svg>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <div class="svg-wrapper">
                            <svg height="30" width="100">
                                <rect id="shape" height="30" width="100" class="sh5" />
                                <div id="textmenu">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                                        aria-haspopup="true" aria-expanded="false">Rechercher</a>
                                    <div class="dropdown-menu" style="right: -131px">
                                        <div class="container-fluid">
                                            <form class="d-flex">
                                                <input class="form-control me-2" type="search" placeholder="Rechercher">
                                                <button class="btn btn-outline-success" type="submit"><i
                                                        class="fas fa-search"></i></button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </svg>
                        </div>
                    </li>
                </ul>
                <a class="navbar-brand" href="#"><img src="/images/pagebase/header/gouillat1.png" id="logonav" /></a>
                <div class="nav-item">
                    <div class="svg-wrapper">
                        <svg height="30" width="100">
                            <rect id="shape" height="30" width="100" class="sh6" />
                            <div id="text">
                                <a href="{{ path('security_registration') }}">Inscription</a>
                            </div>
                        </svg>
                    </div>
                </div>
                <ul class="nav navbar-nav float-md-right mr-2">
                    {% if app.user %}
                    <li class="nav-item dropdown">
                        <div class="svg-wrapper">
                            <svg height="30" width="100">
                                <rect id="shape" height="30" width="100" class="sh7" />
                                <div id="textmenu">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                                        aria-haspopup="true" aria-expanded="false">{{ app.user.firstname }}</a>

                                    <div class="dropdown-menu" style="left: -60px">
                                        {% if 'ROLE_ADMIN' in app.user.roles %}
                                        <a class="dropdown-item" href="{{ path('account') }}">Mon Compte</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/admin">Tableau de bord</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
                                        {% else %}
                                        <a class="dropdown-item" href="{{ path('account') }}">Mon Compte</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </svg>
                        </div>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <div class="svg-wrapper">
                            <svg height="30" width="100">
                                <rect id="shape" height="30" width="100" class="sh8" />
                                <div id="textmenu">
                                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                                </div>
                            </svg>
                        </div>
                    </li>
                    {% endif %}
                </ul>
                <a class="navbar-brand" href="{{ path('cart') }}" alt="">
                    <img src="{{ asset('images/pagebase/header/shopping-cart.png') }}" class="cart-icon"
                        alt="Mon panier" />
                </a>
            </div>
        </nav>
    </header>
</body>

<div class="container">
    {% include 'flash_messages.html.twig' %}
    {% block body %}{% endblock %}
</div>

<footer>
    <p id="p-footer" class="text-center">
        &copy; 2020/{{ 'now'|date("Y", "Europe/Paris") }} &middot;
        <a href="{{ path('app_about') }}" id="a-footer">A Propos</a>
        - <a href="{{ path('app_home') }}" id="a-footer">Retour à la page d'accueil</a>
    </p>
</footer>

<style>
    .container1 {
        padding-right: 0px;
        padding-left: 0px;
        margin: none;
        height: 300px;
    }

    .example-wrapper h1 {
        margin-top: 450px;
        margin-bottom: 30px;
    }

    .example-wrapper {
        text-align: center;
        margin: 180px auto;
        margin-bottom: 70px;
        max-width: 850px;
        width: 95%;
        font: 18px/1.5;
    }

    .example-wrapper code {
        background: #f5f5f5;
        padding: 2px 6px;
    }

    #logo {
        display: flex;
        position: fixed;
        z-index: 2;
        width: 130px;
        height: 180px;
        padding-left: 35px;
        padding-top: 15px;
    }

    header {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 200px;
        background-position: center;
        background-size: cover;
        position: fixed;
        z-index: 1;
    }

    #titreheader {
        font-size: 60px;
        color: #FFFFFF;
        text-shadow: 0 1px 0 #CCCCCC, 0 2px 0 #c9c9c9, 0 3px 0 #bbb, 0 4px 0 #b9b9b9, 0 5px 0 #aaa, 0 6px 1px rgba(0, 0, 0, .1), 0 0 5px rgba(0, 0, 0, .1), 0 1px 3px rgba(0, 0, 0, .3), 0 3px 5px rgba(0, 0, 0, .2), 0 5px 10px rgba(0, 0, 0, .25), 0 10px 10px rgba(0, 0, 0, .2), 0 20px 20px rgba(0, 0, 0, .15);
    }

    #btnheader {
        position: fixed;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        margin-top: 55px;
        margin-left: 10px;
    }

    .carousel-caption {
        position: sticky;
        height: 270px;
    }

    .navbar.bg-light {
        border-color: white !important;
        box-shadow: 0 0.1rem 0.5rem rgba(0, 0, 0, 0.25) !important;
    }

    .nav-link {
        color: #0b93e1 !important;
    }

    .btn-outline-success {
        color: #569A24;
        border-color: #569A24;
    }

    .btn-outline-success:hover {
        background-color: #569A24;
        border-color: #569A24;
    }

    .dropdown-item {
        color: #0b93e1 !important;
        text-align: center;
    }

    .dropdown-item:hover {
        background-color: #fff;
        border-top: 2px solid #569A24;
        border-bottom: 2px solid #569A24;
    }

    .dropdown-menu {
        border-color: #0b93e1;
        box-shadow: 0 0.1rem 1rem rgb(0 0 0 / 25%);
    }

    .dropdown-divider {
        border-top: 1px solid #0b93e1;
    }

    .form-control {
        border: 2px solid rgb(207, 207, 207) !important;
    }

    #logonav {
        width: 100px;
        height: 32px;
    }

    .cart-icon {
        height: 25px;
    }

    footer {
        display: flex;
        flex-direction: column;
        background-size: cover;
        background-position: center;
        margin-top: 100px;
        height: 150px;
        width: 100%;
        background-image: url("/images/pagebase/footer/Route-du-volcan1920.200.png");
    }

    #p-footer {
        margin-top: 20px;
        margin-left: 10px;
        color: #fff;
    }

    #a-footer {
        color: #fff;
        text-decoration: none;
    }

    #a-footer:hover {
        color: #569A24;
    }

    /* 
    Bouton navbar
    */

    .svg-wrapper {
        margin-top: 0;
        position: relative;
        width: 100px;
        height: 30px;
        display: inline-block;
        border-radius: 3px;
        margin-left: 5px;
        margin-right: 5px;
    }

    #shape {
        stroke-width: 3px;
        fill: none;
        stroke: #0b93e1;
        stroke-dasharray: 48 400;
        stroke-dashoffset: -156;
        transition: 1s all ease;
    }

    #shape.sh1 {
        stroke-dasharray: 65 400;
        stroke-dashoffset: -148;
    }

    #shape.sh2 {
        stroke-dasharray: 55 400;
        stroke-dashoffset: -153;
    }

    #shape.sh3 {
        stroke-dasharray: 59 400;
        stroke-dashoffset: -150;
    }

    #shape.sh4 {
        stroke-dasharray: 51 400;
        stroke-dashoffset: -154;
    }

    #shape.sh5 {
        stroke-dasharray: 80 400;
        stroke-dashoffset: -140;
    }

    #shape.sh6 {
        stroke-dasharray: 70 400;
        stroke-dashoffset: -145;
    }

    #shape.sh7 {
        stroke-dasharray: 55 400;
        stroke-dashoffset: -153;
    }

    #shape.sh8 {
        stroke-dasharray: 58 400;
        stroke-dashoffset: -150;
    }

    #text {
        margin-top: -27px;
        text-align: center;
    }

    #text a {
        color: #0b93e1;
        text-decoration: none;
        font-weight: 100;
        font-size: 1.1em;
    }

    #textmenu {
        margin-top: -33px;
        text-align: center;
    }

    .svg-wrapper:hover #shape {
        stroke-dasharray: 50 0;
        stroke-width: 3px;
        stroke-dashoffset: 0;
        stroke: #569A24;
    }
</style>

{% block script %}{% endblock %}

</html>